@model UAndes.ICC5103._202301.Models.EnajenacionViewModel

@{
    ViewBag.Title = "Consult";
}

<head>
    <link rel="stylesheet" href="~/Content/Site.css">
</head>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h3>Consulta de Propietarios de un Predio</h3>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


<div>
    <div class="row">
        <div class="col-md-4" id="card-body-col">
            <div class="col-md-4" id="card-body-col">
                @Html.LabelFor(model => model.Enajenacion.Comuna, htmlAttributes: new { @class = "form-control", @id = "form-label" })
            </div>
            <div class="col-md-8" id="card-body-col">
                @Html.DropDownListFor(model => model.Enajenacion.Comuna, new SelectList(@Model.ComunaOptions, "Valor", "Comuna"), "Selecione la comuna", new { @class = "form-control", @id = "form-editor" })
                @Html.ValidationMessageFor(model => model.Enajenacion.Comuna, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4" id="card-body-col">
            <div class="col-md-4" id="card-body-col">
                @Html.LabelFor(model => model.Enajenacion.Manzana, htmlAttributes: new { @class = "form-control", @id = "form-label" })
            </div>
            <div class="col-md-8" id="card-body-col">
                @Html.EditorFor(model => model.Enajenacion.Manzana, new { htmlAttributes = new { @class = "form-control", @id = "form-editor", placeholder = "Ingrese Manzana" } })
                @Html.ValidationMessageFor(model => model.Enajenacion.Manzana, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4" id="card-body-col">
            <div class="col-md-4" id="card-body-col">
                @Html.LabelFor(model => model.Enajenacion.Predio, htmlAttributes: new { @class = "form-control", @id = "form-label" })
            </div>
            <div class="col-md-8" id="card-body-col">
                @Html.EditorFor(model => model.Enajenacion.Predio, new { htmlAttributes = new { @class = "form-control", @id = "form-editor", placeholder = "Ingrese Predio" } })
                @Html.ValidationMessageFor(model => model.Enajenacion.Predio, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4" id="card-body-col">
            <div class="col-md-4" id="card-body-col">
                @Html.LabelFor(model => model.Year, htmlAttributes: new { @class = "form-control", @id = "form-label" })
            </div>
            <div class="col-md-8" id="card-body-col">
                @Html.EditorFor(model => model.Year, new { htmlAttributes = new { @class = "form-control", @id = "form-editor", placeholder = "Ingrese Año" } })
                @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

</div>

    <div>
        <div class="container">
            <div class="row">
                <div class="col-md-12 bg-light text-right">
                    <button class="btn btn-primary" type="submit" id="btn-primary">Buscar</button>
                </div>
            </div>
        </div>
    </div>
}



@if (Model.Adquirientes != null)
{
    <h4>Enajenates</h4>

    <table class="table">
        <tr>
            <th>Rut</th>
            <th>% Derechos</th>
            <th>Fojas</th>
            <th>Nro.</th>
            <th>Año</th>
            <th>Fecha de Inscripción</th>
        </tr>

        @foreach (var enaje in Model.Enajenacions)
        {

            foreach (var item in Model.Enajenantes)
            {
                if (enaje.Id == item.IdEnajenacion)
                {
                    <tr>
                        <td>@item.RutEnajenante</td>
                        <td>@item.PorcentajeEnajenante</td>
                        <td>@enaje.Fojas</td>
                        <td>@enaje.IdInscripcion</td>
                        <td>@enaje.FechaInscripcion.Year</td>
                        <td>@enaje.FechaInscripcion</td>

                    </tr>
                }
            }
        }
    </table>
}
@if (Model.Adquirientes != null)
{
    <h4>Adquirientes</h4>
    <table class="table">
        <tr>
            <th>Rut</th>
            <th>% Derechos</th>
            <th>Fojas</th>
            <th>Nro.</th>
            <th>Año</th>
            <th>Fecha de Inscripción</th>
        </tr>

        @foreach (var enaje in Model.Enajenacions)
        {

            foreach (var item in Model.Adquirientes)
            {
                if (enaje.Id == item.IdEnajenacion)
                {
                    <tr>
                        <td>@item.RutAdquiriente</td>
                        <td>@item.PorcentajeAdquiriente</td>
                        <td>@enaje.Fojas</td>
                        <td>@enaje.IdInscripcion</td>
                        <td>@enaje.FechaInscripcion.Year</td>
                        <td>@enaje.FechaInscripcion</td>

                    </tr>
                }
            }
        }
    </table>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

